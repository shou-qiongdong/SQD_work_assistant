{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.shengwenwang.tauri-app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SQD 工作助手",
        "width": 800,
        "height": 600,
        "label": "main",
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main", "quick-add", "stats"],
          "permissions": [
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-set-focus",
            "core:window:allow-center",
            "core:window:allow-set-size",
            "core:window:allow-inner-size",
            "core:window:allow-unminimize",
            "core:window:default",
            "core:event:allow-emit",
            "core:event:allow-listen",
            "core:event:default",
            "core:tray:allow-new",
            "core:tray:allow-set-icon",
            "core:tray:allow-set-menu",
            "core:tray:allow-set-show-menu-on-left-click",
            "core:tray:allow-set-tooltip",
            "core:menu:allow-new",
            "core:menu:allow-append",
            "core:menu:allow-prepend",
            "core:menu:allow-insert",
            "core:menu:allow-remove",
            "core:menu:allow-remove-at",
            "core:menu:allow-items",
            "core:menu:allow-get",
            "core:menu:allow-popup",
            "core:menu:allow-create-default",
            "core:menu:allow-set-as-app-menu",
            "core:menu:allow-set-as-window-menu"
          ]
        }
      ]
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": [
        {
          "shortcut": "CommandOrControl+Shift+N",
          "handler": "quick_add_task"
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
